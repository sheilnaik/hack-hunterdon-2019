{
	"name": "EasyEthics",
	"manifest_version" : 2,
	"version": "0.1",
	"background": {
		"scripts": ["jquery-3.4.0.min.js","background.js"],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
			  "https://www.amazon.com/*", 
			  "http://www.amazon.com/*",
			  "https://www.google.com/*"
			],
		"js": ["jquery-3.4.0.min.js","content.js"]
		}
	],
	"permissions": ["tabs","activeTab","https://ericjschneider.com/","https://amazon.com/"],
	"browser_action": {
		"default_popup": "popup.html"
	}
}
